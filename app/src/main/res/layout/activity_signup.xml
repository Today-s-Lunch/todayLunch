<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 타이틀 -->
            <TextView
                android:id="@+id/Today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <!-- 학번 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학번"
                android:textColor="#FF6B6B"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/studentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_editred"
                android:hint="학번을 입력해 주세요"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- 비밀번호 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="#FFAD60"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_edityellow"
                android:hint="비밀번호를 입력해 주세요"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- 비밀번호 확인 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textColor="#FFAD60"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/confirmpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_edityellow"
                android:hint="비밀번호를 다시 입력해 주세요"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- 닉네임 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임 설정"
                android:textColor="#FF6B6B"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_editred"
                android:hint="닉네임을 설정해 주세요."
                android:padding="10dp"
                android:layout_marginBottom="30dp"/>

            <!-- 회원가입 버튼 -->
            <android.widget.Button
                android:id="@+id/signUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/signup_btn"
                android:padding="10dp"
                android:text="회원가입"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <!-- 로그인 화면으로 이동 -->
            <TextView
                android:id="@+id/goToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="로그인 하러가기 >"
                android:textColor="#666666"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>